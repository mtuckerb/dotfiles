[init]
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[alias]
  diffdir = difftool --dir-diff --tool=bcomp --no-prompt
  aa = add --all
  ap = add --patch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[diff]
 tool = bcomp
 colorMoved = zebra
 #suppressBlankEmpty = true
 #mnemonicPrefix = true
 # noprefix = true
 renameLimit = 2500

[difftool]
   prompt = false

[difftool "bcomp"]
   cmd = bcomp \"$LOCAL\" \"$REMOTE\"
   trustExitCode = true
